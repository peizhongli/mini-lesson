/* pages/mine/mine.wxss */
#userInfo {
  height: 100vh;
  color: #333;
  background-color: #f6f8f9;
}
#userInfo .bar {
  display: flex;
  padding: 10px 15px;
  border-bottom: 1px solid #f6f8f9;
  font-size: 13px;
  background-color: #fff;
}
#userInfo .logout {
  margin-top: 5px;
}
#userInfo .main {
  margin-bottom: 5px;
}
#userInfo .main image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
#userInfo .main-mes {
  flex: 1;
  padding-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
#userInfo text {
  display: block;
}
#userInfo .main .name {
  font-size: 13px;
  color: #333;
}
#userInfo .main .email {
  font-size: 12px;
  color: #999;
}