<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">用户名</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入用户名" confirm-type="next" focus bindinput="inputName" value='{{name}}' />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">邮箱</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入邮箱" confirm-type="next" focus bindinput="inputEmail" value='{{email}}' />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">密码</view>
    </view>
    <view class="weui-cell__bd">
      <input password class="weui-input" placeholder="请输入密码" confirm-type="done" bindinput='inputPassword' value='{{password}}' />
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__hd">
      <view class="weui-label">确认密码</view>
    </view>
    <view class="weui-cell__bd">
      <input password class="weui-input" placeholder="请确认密码" confirm-type="done" bindinput='inputCheckPassword' value='{{checkPassword}}' />
    </view>
  </view>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="toRegi">注册</button>
  </view>
</view>